{
  "name": "@solace-iot-team/apim-server",
  "version": "0.0.1",
  "description": "Async API Management Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "ts-node dev-build.ts && ts-node build.ts",
    "dev:build": "ts-node dev-build.ts",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:nopretty": "nodemon server/index.ts",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet",
    "test": "source ./test/source.env.sh && mocha --config test/.mocharc.yml test/**/**.*.spec.ts && unset_source_env",
    "test:pretty": "source ./test/source.env.sh && mocha --config test/.mocharc.yml test/**/**.inline.spec.ts | pino-pretty && unset_source_env",
    "test:debug": "mocha -r ts-node/register --inspect-brk test/**/*.ts --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solace-iot-team/async-apim.git"
  },
  "keywords": [
    "api management",
    "solace",
    "asyncapi"
  ],
  "author": "Solace Corporation",
  "contributors": [
    {
      "name": "Ricardo Gomez-Ulmke",
      "email": "ricardo.gomez-ulmke@solace.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/solace-iot-team/async-apim/issues"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.11",
    "mongodb": "^4.1.0",
    "pino": "^6.11.3",
    "print-env": "^0.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.12",
    "@types/js-yaml": "^4.0.2",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^15.6.1",
    "@types/node-fetch": "^2.5.12",
    "@types/pino": "^6.3.8",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.3.4",
    "dtsgenerator": "^3.12.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.21",
    "mocha": "^8.4.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "openapi-typescript-codegen": "^0.9.3",
    "pino-pretty": "^5.0.1",
    "prettier": "^2.3.0",
    "shelljs": "^0.8.4",
    "sinon": "^11.1.2",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "uuidv4": "^6.2.11"
  }
}
