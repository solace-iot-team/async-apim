{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "lib": [ "es2021"],
    "strict": true,
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
